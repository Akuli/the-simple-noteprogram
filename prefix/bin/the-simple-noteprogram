#!/usr/bin/env python3
"""This file is a launcher for The Simple Noteprogram on non-Windows
operating systems"""

from os.path import abspath, dirname, join
import sys

prefix = dirname(dirname(abspath(__file__)))

# This is bad, but not as bad as running the whole program in a
# subprocess
sys.path.append(join(prefix, 'lib', 'the-simple-noteprogram'))
from the_simple_noteprogram.__main__ import main

if __name__ == '__main__':
    main()
